@model MVC_Team_Project.View_Models.DoctorFormVM

<div class="row">
    <!-- User selection (only for edit, shows current user info) -->
    <div class="form-group col-md-6">
        <label asp-for="Doctor.UserId" class="form-label">User</label>
        <select asp-for="Doctor.UserId" class="form-control" disabled>
            @foreach (var user in Model.Users)
            {
                <option value="@user.Id" selected="@(user.Id == Model.Doctor.UserId ? "selected" : null)">
                    @user.FullName (@user.Email)
                </option>
            }
        </select>
        <input type="hidden" asp-for="Doctor.UserId" />
        <span asp-validation-for="Doctor.UserId" class="text-danger"></span>
    </div>

    <!-- Specialty selection -->
    <div class="form-group col-md-6">
        <label asp-for="Doctor.SpecialtyId" class="form-label">Specialty</label>
        <select asp-for="Doctor.SpecialtyId" class="form-control">
            <option value="">-- Select Specialty --</option>
            @foreach (var spec in Model.Specialties)
            {
                <option value="@spec.Id" selected="@(spec.Id == Model.Doctor.SpecialtyId ? "selected" : null)">
                    @spec.Name
                </option>
            }
        </select>
        <span asp-validation-for="Doctor.SpecialtyId" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="Doctor.ClinicAddress" class="form-label">Clinic Address</label>
    <input asp-for="Doctor.ClinicAddress" class="form-control" placeholder="Enter clinic address" />
    <span asp-validation-for="Doctor.ClinicAddress" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Doctor.Bio" class="form-label">Bio</label>
    <textarea asp-for="Doctor.Bio" class="form-control" rows="3" placeholder="Write a short bio..."></textarea>
    <span asp-validation-for="Doctor.Bio" class="text-danger"></span>
</div>

<div class="row">
    <div class="form-group col-md-6">
        <label asp-for="Doctor.ConsultationFee" class="form-label">Consultation Fee (USD)</label>
        <input asp-for="Doctor.ConsultationFee" class="form-control" type="number" step="0.01" placeholder="Fee in USD" />
        <span asp-validation-for="Doctor.ConsultationFee" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="Doctor.ExperienceYears" class="form-label">Experience Years</label>
        <input asp-for="Doctor.ExperienceYears" class="form-control" type="number" placeholder="Years of experience" />
        <span asp-validation-for="Doctor.ExperienceYears" class="text-danger"></span>
    </div>
</div>

<div class="form-group">
    <label asp-for="Doctor.LicenseNumber" class="form-label">License Number</label>
    <input asp-for="Doctor.LicenseNumber" class="form-control" placeholder="e.g. D123456" />
    <span asp-validation-for="Doctor.LicenseNumber" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Doctor.Education" class="form-label">Education</label>
    <textarea asp-for="Doctor.Education" class="form-control" rows="3" placeholder="List your degrees, institutions..."></textarea>
    <span asp-validation-for="Doctor.Education" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Doctor.Certifications" class="form-label">Certifications</label>
    <textarea asp-for="Doctor.Certifications" class="form-control" rows="3" placeholder="Enter your certifications..."></textarea>
    <span asp-validation-for="Doctor.Certifications" class="text-danger"></span>
</div>
<div class="form-check mt-3">
    <input class="form-check-input" type="checkbox" asp-for="Doctor.IsVerified" />
    <label class="form-check-label" asp-for="Doctor.IsVerified">
        Verified Doctor
    </label>
</div>
<span asp-validation-for="Doctor.IsVerified" class="text-danger"></span>