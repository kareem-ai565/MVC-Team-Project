<!--p Delete.cshtml -->
@model MVC_Team_Project.Models.Patient

@{
    ViewData["Title"] = "Delete Patient";
    Layout = "_DashbordLayout";
}                          

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-times text-danger"></i> Delete Patient</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5><i class="fas fa-exclamation-triangle"></i> Confirm Delete</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h6><i class="fas fa-warning"></i> Warning!</h6>
                        Are you sure you want to delete this patient and their associated user account?
                        <br><strong>This action cannot be undone!</strong>
                    </div>

                    <!-- Patient Summary -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6>Patient Information</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Name:</strong> @Model.User?.FullName</p>
                                    <p><strong>Email:</strong> @Model.User?.Email</p>
                                    <p><strong>Phone:</strong> @Model.User?.PhoneNumber</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Gender:</strong> @Model.Gender</p>
                                    <p><strong>Date of Birth:</strong> @Model.DOB?.ToString("MM/dd/yyyy")</p>
                                    <p><strong>Patient Since:</strong> @Model.CreatedAt.ToString("MM/dd/yyyy")</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Delete Form (fixed routing here) -->
                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you absolutely sure you want to delete this patient? This action cannot be undone.')">
                                <i class="fas fa-trash"></i> Yes, Delete Patient
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

