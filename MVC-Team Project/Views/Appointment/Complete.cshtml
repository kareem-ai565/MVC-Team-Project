@model MVC_Team_Project.View_Models.AppointmentCompleteVM

@{
    ViewData["Title"] = "Complete Appointment";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4>Complete Appointment</h4>
        </div>

        <div class="card-body">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-4">
                <p><strong>Patient:</strong> @Model.PatientName</p>
                <p><strong>Doctor:</strong> @Model.DoctorName</p>
                <p><strong>Date:</strong> @Model.AppointmentDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Time:</strong> @Model.StartTime.ToString(@"hh\:mm") - @Model.EndTime.ToString(@"hh\:mm")</p>
                <p><strong>Symptoms:</strong> @Model.Symptoms</p>
                <p><strong>Consultation Fee:</strong> @Model.ConsultationFee.ToString("C")</p>
            </div>

            <form asp-action="Complete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Diagnosis" class="form-label"></label>
                    <textarea asp-for="Diagnosis" class="form-control" required></textarea>
                    <span asp-validation-for="Diagnosis" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DoctorNotes" class="form-label"></label>
                    <textarea asp-for="DoctorNotes" class="form-control"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Prescription" class="form-label"></label>
                    <textarea asp-for="Prescription" class="form-control"></textarea>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsFollowUpRequired" class="form-check-input" />
                    <label asp-for="IsFollowUpRequired" class="form-check-label">Follow-up Required?</label>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FollowUpDate" class="form-label"></label>
                    <input asp-for="FollowUpDate" type="date" class="form-control" />
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Complete Appointment
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
