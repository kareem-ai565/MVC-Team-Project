@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>Delmont</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    @* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" /> *@
    <!-- Bootstrap Bundle JS (includes Popper.js) -->
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="~/css/home.css" />

    <style>
        .top-footer{
			margin-top: 0px !important;
        }
    </style>

</head>
<body class="is-preload landing">
    <div id="page-wrapper">

        <!-- Header -->
        <!-- Topbar -->
        <div class="topbar">
            <div class="topbar-container">
                <div class="left">
                    <div><i class="fas fa-location-dot"></i>234 Triumph, Los Angeles, California, US</div>
                    <div><i class="fas fa-clock"></i>Mon - Sat 8.00 - 18.00. Sunday CLOSED</div>
                </div>
                <div class="right">
                    <a href="/"><i class="fab fa-facebook-f"></i></a>
                    <a href="/"><i class="fab fa-twitter"></i></a>
                    <a href="/"><i class="fab fa-pinterest-p"></i></a>
                    <a href="/"><i class="fab fa-linkedin-in"></i></a>
                    <a href="Specialty/ShowAll" class="appointment">GET A APPOINTMENT!</a>
                </div>
            </div>
        </div>

        <!-- Main Header -->
        <div class="header">
            <header>
                <div id="menu-bar" class="fas fa-bars" onclick="menuHandler()"></div>
                <a href="/" class="logo" title="Delmont"><img src="/images/logo.png" alt="" /></a>

                <nav class="navbar">
                    <a href="/">Home</a>
                    <a href="#doctors">Doctors</a>
                    <a asp-controller="Specialty" asp-action="ShowAll">Specialties</a>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Patient"))
                    {
                        <a asp-controller="PatientMedicalRecord" asp-action="Index">Medical Records</a>
                    }
                </nav>

                <div class="icon d-flex align-items-center gap-3">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Login" asp-controller="Auth"><i class="fas fa-user"></i> Login</a>
                    }
                    else
                    {
                        @if (User.IsInRole("Patient"))
                        {
                            <div class="dropdown">
                                <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-bell"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end overflow-hidden">
                                    <li><a class="dropdown-item" href="#">You have 3 new notifications</a></li>
                                    <li><a class="dropdown-item" href="#">Appointment Reminder</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-center" asp-controller="Notification" asp-action="Index">Show all notifications</a>
                                    </li>
                                </ul>
                            </div>

                            <a asp-controller="Patients" asp-action="Profile" title="Profile">
                                <i class="fa fa-user-circle"></i>
                            </a>
                        }

                        <form id="logoutForm" asp-action="Logout" asp-controller="Auth" method="post" style="display:none;"></form>
                        <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();">
                            <i class="fa-solid fa-right-from-bracket"></i> Logout
                        </a>
                    }
                </div>
            </header>
        </div>


        <!-- Main content placeholder -->
        <main style="margin:auto !important;">
            @RenderBody()
        </main>

        <!-- Top Footer Section -->
        <div class="top-footer">
            <div class="top-container">
                <div class="top-box" data-aos="fade-right">
                    <div class="top-icon">
                        <i class="fas fa-phone"></i>
                    </div>
                    <div class="top-title">
                        <h3>+123 456 78910 / 11</h3>
                        <p>Have a question? call us now</p>
                    </div>
                </div>
                <div class="top-box" data-aos="zoom-in-up">
                    <div class="top-icon">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="top-title">
                        <h3>info@domainname.com</h3>
                        <p>Need support? Drop us an email</p>
                    </div>
                </div>
                <div class="top-box" data-aos="fade-left">
                    <div class="top-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="top-title">
                        <h3>Mon – Sat 07:00 – 21:00</h3>
                        <p>We are open on</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Basic Footer Section -->
        <section class="Basic">
            <div class="Basic-container">
                <div class="Basic-box" data-aos="fade-right">
                    <h3>About Delmont</h3>
                    <p>Our Clinic has grown to provide a world class facility for the clinic advanced restorative dentistry.</p>
                    <p>We are among the most qualified implant providers in the AUS with over 30 years of quality training and experience.</p>
                </div>
                <div class="Basic-box" data-aos="zoom-in-up">
                    <h3>Quick Links</h3>
                    <a href="/">Home</a>
                    <a href="#doctors">Doctors</a>
                    <a asp-controller="Specialty" asp-action="ShowAll">Specialties</a>
                    @* <a href="/pages">Pages</a>
                    <a href="/research">Research</a>
                    <a href="/services">Services</a>
                    <a href="/blog">Blog</a> *@
                </div>
                <div class="Basic-box" data-aos="zoom-in-up">
                    <h3>Latest News</h3>
                    <div class="pic-container">
                        <img src="./images/blog/01.jpg" alt="" data-aos="fade-right" />
                        <img src="./images/blog/02.jpg" alt="" data-aos="fade-left" />
                        <img src="./images/blog/03.jpg" alt="" data-aos="fade-right" />
                        <img src="./images/blog/01.jpg" alt="" data-aos="fade-left" />
                        <img src="./images/blog/02.jpg" alt="" data-aos="fade-right" />
                        <img src="./images/blog/03.jpg" alt="" data-aos="fade-left" />
                    </div>
                </div>
                <div class="Basic-box" data-aos="fade-left">
                    <h3>Our Services</h3>
                    <div class="con-container">
                        <a href="Specialty/ShowAll">Surgery</a>
                        <a href="Specialty/ShowAll">Psychological</a>
                        <a href="Specialty/ShowAll">Cardiology</a>
                        <a href="Specialty/ShowAll">Orthopedics</a>
                        <a href="Specialty/ShowAll">Pediatric</a>
                        <a href="Specialty/ShowAll">Oncology</a>
                        <a href="Specialty/ShowAll">Anesthesiology</a>
                        <a href="Specialty/ShowAll">Dermatology</a>
                    </div>
                </div>
            </div>
            <h1 class="credit">
                copyright ©2023 all rights reserved |
                this template is made with <span>♡</span> by <span>MVC Team</span>
            </h1>
        </section>
    </div>

    <!-- Toast Container -->
    <div aria-live="polite" aria-atomic="true"
         style="position: fixed; top: 20px; right: 20px; z-index: 9999; min-width: 300px;">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="toast" id="successToast" data-delay="5000" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-success text-white">
                    <strong class="mr-auto bigger2">Success</strong>
                    <small class="text-light bigger2">just now</small>
                    <button type="button" class="ml-2 mb-1 close btn-close btn-close-white bigger2" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body bigger2">
                    @TempData["SuccessMessage"]
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="toast" id="errorToast" data-delay="5000" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-danger text-white">
                    <strong class="mr-auto bigger2">Error</strong>
                    <small class="text-light bigger2">just now</small>
                    <button type="button" class="ml-2 mb-1 close btn-close btn-close-white bigger2" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body bigger2">
                    @TempData["ErrorMessage"]
                </div>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="toast" id="infoToast" data-delay="5000" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header bg-info text-white">
                    <strong class="mr-auto bigger2">Info</strong>
                    <small class="text-light bigger2">just now</small>
                    <button type="button" class="ml-2 mb-1 close btn-close btn-close-white bigger2" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body bigger2">
                    @TempData["InfoMessage"]
                </div>
            </div>
        }
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var successToast = new bootstrap.Toast(document.getElementById('successToast'));
            var errorToast = new bootstrap.Toast(document.getElementById('errorToast'));
            var infoToast = new bootstrap.Toast(document.getElementById('infoToast'));

            if (document.getElementById('successToast')) successToast.show();
            if (document.getElementById('errorToast')) errorToast.show();
            if (document.getElementById('infoToast')) infoToast.show();

            document.querySelectorAll('[data-bs-dismiss="toast"]').forEach(function (button) {
                button.addEventListener('click', function () {
                    var toast = bootstrap.Toast.getInstance(this.closest('.toast'));
                    if (toast) toast.hide();
                });
            });
        });
    </script>
    <!-- Scripts -->
    <script src="~/js/jquery.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>