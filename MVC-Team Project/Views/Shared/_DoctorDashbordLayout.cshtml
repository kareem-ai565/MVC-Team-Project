    <style>
        :root {
            --main-primary: rgb(54, 112, 129);
            --main-primary-hover: rgba(54, 112, 129, 0.85);
            --main-secondary: rgb(44, 92, 109);
            --accent-color: rgb(236, 162, 84);
            --accent-hover: rgba(236, 162, 84, 0.85);
        }

        /* Primary Styles */
        .btn-primary,
        .bg-primary,
        .text-primary,
        .border-primary {
            background-color: var(--main-primary) !important;
            border-color: var(--main-primary) !important;
            color: #fff !important;
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary:active,
            .bg-primary:hover,
            .text-primary:hover,
            .border-primary:hover {
                background-color: var(--main-primary-hover) !important;
                border-color: var(--main-primary-hover) !important;
                color: #fff !important;
            }

            .btn-primary:visited {
                background-color: var(--main-primary-hover) !important;
            }

            .btn-primary:disabled {
                background-color: #ccc !important;
                border-color: #ccc !important;
                color: #888 !important;
            }

        .btn-outline-primary {
            color: var(--main-primary) !important;
            border-color: var(--main-primary) !important;
        }

            .btn-outline-primary:hover,
            .btn-outline-primary:focus,
            .btn-outline-primary:active {
                background-color: var(--main-primary) !important;
                color: #fff !important;
            }

        /* Secondary Styles */
        .btn-secondary,
        .bg-secondary,
        .text-secondary,
        .border-secondary {
            background-color: var(--main-secondary) !important;
            border-color: var(--main-secondary) !important;
            color: #fff !important;
        }

            .btn-secondary:hover,
            .btn-secondary:focus,
            .btn-secondary:active {
                background-color: rgba(44, 92, 109, 0.85) !important;
                border-color: rgba(44, 92, 109, 0.85) !important;
                color: #fff !important;
            }

        .btn-outline-secondary {
            color: var(--main-secondary) !important;
            border-color: var(--main-secondary) !important;
        }

            .btn-outline-secondary:hover,
            .btn-outline-secondary:focus,
            .btn-outline-secondary:active {
                background-color: var(--main-secondary) !important;
                color: #fff !important;
                border-color: var(--main-secondary) !important;
            }

        /* Accent/Interacting Color */
        .btn-accent {
            background-color: var(--accent-color) !important;
            border-color: var(--accent-color) !important;
            color: #fff !important;
        }

            .btn-accent:hover,
            .btn-accent:focus,
            .btn-accent:active {
                background-color: var(--accent-hover) !important;
                border-color: var(--accent-hover) !important;
                color: #fff !important;
            }

        /* Links + Nav */
        a:hover,
        .active span,
        .active a,
        .active i {
            color: var(--main-primary-hover) !important;
        }

        .sidebar-menu > ul > li > a:hover {
            color: var(--main-primary) !important;
        }

        /* Pagination */
        .page-item.active .page-link {
            background-color: var(--main-primary) !important;
            color: #fff !important;
            border-color: var(--main-primary) !important;
        }

        .pagination > li > a,
        .pagination > li > span {
            color: var(--main-primary) !important;
        }

        /* Replace default hardcoded Bootstrap blue/gray */
        [style*="color: #007bff"],
        [style*="color:#007bff"],
        [style*="color: rgb(0, 123, 255)"] {
            color: var(--main-primary) !important;
        }

        [style*="background-color: #007bff"],
        [style*="background-color:#007bff"],
        [style*="background-color: rgb(0, 123, 255)"] {
            background-color: var(--main-primary) !important;
        }

        [style*="background-color: #6c757d"],
        [style*="background-color:#6c757d"],
        [style*="background-color: rgb(108, 117, 125)"] {
            background-color: var(--main-secondary) !important;
        }

        [style*="color: #6c757d"],
        [style*="color:#6c757d"],
        [style*="color: rgb(108, 117, 125)"] {
            color: var(--main-secondary) !important;
        }
    </style>

</head>

