@model MVC_Team_Project.Models.Specialty
@{
    Layout = "_DashbordLayout";
}
<div class="card container mt-5">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p><strong>Description:</strong> @Model.Description</p>
        <p>
            <strong>Doctors Count:</strong> @Model.Doctors?.Count()
        </p>

        <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
        <p><strong>Created At:</strong> @Model.CreatedAt</p>

        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
