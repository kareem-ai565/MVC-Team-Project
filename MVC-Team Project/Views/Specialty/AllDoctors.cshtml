@model IEnumerable<MVC_Team_Project.Models.Doctor>
@{
    ViewData["Title"] = "All Doctors";
}

<style>

    /* Primary Styles */
    .btn-primary,
    .bg-primary,
    .text-primary,
    .border-primary {
        background-color: var(--second) !important;
        border-color: var(--second) !important;
        color: #fff !important;
    }

        .btn-primary:hover,
        .btn-primary:focus,
        .btn-primary:active,
        .bg-primary:hover,
        .text-primary:hover,
        .border-primary:hover {
            background-color: var(--second) !important;
            border-color: var(--second) !important;
            color: #fff !important;
        }

        .btn-primary:visited {
            background-color: var(--second) !important;
        }

        .btn-primary:disabled {
            background-color: #ccc !important;
            border-color: #ccc !important;
            color: #888 !important;
        }

    .btn-outline-primary {
        color: var(--second) !important;
        border-color: var(--second) !important;
    }

        .btn-outline-primary:hover,
        .btn-outline-primary:focus,
        .btn-outline-primary:active {
            background-color: var(--second) !important;
            color: #fff !important;
        }

    /* Secondary Styles */
    .btn-secondary,
    .bg-secondary,
    .text-secondary,
    .border-secondary {
        background-color: var(--second) !important;
        border-color: var(--second) !important;
        color: #fff !important;
    }

        .btn-secondary:hover,
        .btn-secondary:focus,
        .btn-secondary:active {
            background-color: var(--second) !important;
            border-color: var(--second) !important;
            color: #fff !important;
        }

    .btn-outline-secondary {
        color: var(--second) !important;
        border-color: var(--second) !important;
    }

        .btn-outline-secondary:hover,
        .btn-outline-secondary:focus,
        .btn-outline-secondary:active {
            background-color: var(--second) !important;
            color: #fff !important;
            border-color: var(--second) !important;
        }

    /* Accent/Interacting Color */
    .btn-accent {
        background-color: var(--second) !important;
        border-color: var(--second) !important;
        color: #fff !important;
    }

        .btn-accent:hover,
        .btn-accent:focus,
        .btn-accent:active {
            background-color: var(--second) !important;
            border-color: var(--second) !important;
            color: #fff !important;
        }

    /* Links + Nav */
    a:hover,
    .active span,
    .active a,
    .active i {
        color: var(--second) !important;
    }

    .sidebar-menu > ul > li > a:hover {
        color: var(--second) !important;
    }

    /* Pagination */
    .page-item.active .page-link {
        background-color: var(--second) !important;
        color: #fff !important;
        border-color: var(--second) !important;
    }

    .pagination > li > a,
    .pagination > li > span {
        color: var(--second) !important;
    }

    /* Replace default hardcoded Bootstrap blue/gray */
    [style*="color: #007bff"],
    [style*="color:#007bff"],
    [style*="color: rgb(0, 123, 255)"] {
        color: var(--second) !important;
    }

    [style*="background-color: #007bff"],
    [style*="background-color:#007bff"],
    [style*="background-color: rgb(0, 123, 255)"] {
        background-color: var(--second) !important;
    }

    [style*="background-color: #6c757d"],
    [style*="background-color:#6c757d"],
    [style*="background-color: rgb(108, 117, 125)"] {
        background-color: var(--second) !important;
    }

    [style*="color: #6c757d"],
    [style*="color:#6c757d"],
    [style*="color: rgb(108, 117, 125)"] {
        color: var(--second) !important;
    }
</style>

<div class="container-fluid">
    <div class="mb-5">
        <img src="/images/research/ttm-pagetitle-bg.jpg" class="img-fluid w-100 rounded shadow-sm" />
    </div>
</div>

<div class="container-fluid py-4" style="background-color: #f8f9fa;">
    <div class="container">
        <!-- Header Section -->
        <div class="mb-4">
            <h2 class="text-dark font-weight-bold mb-2 bigger">All Doctors</h2>
            <p class="text-muted lead bigger2">Find and book appointments with our qualified doctors</p>
        </div>

        <!-- Search Section -->
        <div class="row mb-4">
            <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
                <form method="get" class="search-form">
                    <div class="input-group shadow-sm rounded-pill overflow-hidden">
                        <input type="text"
                               name="search"
                               value="@ViewBag.Search"
                               class="form-control border-0 py-3 px-4"
                               placeholder="Search by doctor name, email, phone, or specialty..."
                               style="font-size: 16px; background-color: white; border-radius: 0;">
                        <button type="submit"
                                class="btn btn-success px-4 py-3 border-0"
                                style="border-radius: 0 50px 50px 0;">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>


        <!-- Results Info -->
        @if (ViewBag.Search != null)
        {
            <div class="mb-3">
                <div class="alert alert-info border-0 shadow-sm bigger2" style="border-radius: 10px;">
                    <i class="fas fa-info-circle me-2"></i>
                    @if (ViewBag.TotalCount > 0)
                    {
                        <span>Found @ViewBag.TotalCount doctor(s) matching "@ViewBag.Search"</span>
                    }
                    else
                    {
                        <span>No doctors found matching "@ViewBag.Search"</span>
                    }
                    <a href="@Url.Action("AllDoctors")" class="btn btn-sm btn-outline-info ms-2">Clear Search</a>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="alert alert-warning border-0 shadow-sm bigger" style="border-radius: 10px;">
                <i class="fas fa-exclamation-triangle me-2 bigger"></i>
                No doctors found.
            </div>
        }
        else
        {
            <!-- Doctors Cards -->
            <div class="row">
                @foreach (var doctor in Model)
                {
                    <div class="col-lg-6 col-xl-4 mb-4">
                        <div class="card h-100 shadow-sm border-0 doctor-card" style="border-radius: 12px; transition: all 0.3s;">
                            <div class="card-body p-4">
                                <!-- Doctor Header -->
                                <div class="d-flex align-items-start mb-3">
                                    <div class="doctor-avatar me-3" style="width: 100px; height: 100px; background: linear-gradient(135deg, #28a745, #20c997); border-radius: 50%; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                        @* <i class="fas fa-user-md text-white" style="font-size: 24px;"></i> *@
                                        <img src="@(doctor.User.ProfilePicture ?? "/images/default-doctor.jpg")"
                                             alt="@doctor.User.FullName"
                                             class="rounded-circle shadow-sm"
											 style="width: 100px; height: 100px; object-fit: cover;" />
                                    </div>
                                    <div class="flex-grow-1">
                                        <h5 class="card-title font-weight-bold text-dark mb-1 bigger1">@doctor.User.FullName</h5>
                                        <div class="d-flex flex-column justify-content-start gap-1 align-items-baseline mb-2">
                                            <span class="badge badge-specialty me-2 bigger2" style="background-color: #fff3e0; color: #f57c00; padding: 4px 8px; border-radius: 12px; font-size: 12px;">
                                                @doctor.Specialty.Name
                                            </span>
                                            <span class="badge badge-experience me-2 bigger2" style="background-color: #e3f2fd; color: #1976d2; padding: 4px 8px; border-radius: 12px; font-size: 12px;">
                                                @doctor.ExperienceYears yrs experience
                                            </span>
                                            @* @if (doctor.IsVerified)
                                            {
                                                <span class="badge badge-verified" style="background-color: #e8f5e8; color: #2e7d32; padding: 4px 8px; border-radius: 12px; font-size: 12px;">
                                                    <i class="fas fa-check-circle me-1"></i>Verified
                                                </span>
                                            } *@
                                        </div>
                                    </div>
                                </div>

                                <div class="doctor-info mb-3">
                                    <p class="card-text text-muted mb-3" style="font-size: 14px; line-height: 1.5;">
                                        @doctor.Bio
                                    </p>
                                    
                                    <div class="clinic-info mb-3">
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-envelope text-muted me-2" style="width: 16px;"></i>
                                            <span class="text-muted" style="font-size: 14px;">@doctor.User.Email</span>
                                        </div>
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-phone text-muted me-2" style="width: 16px;"></i>
                                            <span class="text-muted" style="font-size: 14px;">
                                                @(doctor.User.PhoneNumber ?? "    ---")
                                            </span>

                                        </div>
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="fas fa-map-marker-alt text-muted me-2" style="width: 16px;"></i>
                                            <span class="text-muted" style="font-size: 14px;">@doctor.ClinicAddress</span>
                                        </div>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-dollar-sign text-muted me-2" style="width: 16px;"></i>
                                            <span class="text-dark font-weight-bold">@doctor.ConsultationFee.ToString("C")</span>
                                            <span class="text-muted ms-1" style="font-size: 16px;">consultation fee</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-actions mt-auto">
                                    <div class="row">
                                        <div class="col-6">
                                            <a href="/PatientAppointment/Index?doctorId=@doctor.Id" class="btn btn-success btn-sm w-100 bigger2" style="border-radius: 6px; font-weight: 500; height:40px; line-height: 26px;">
                                                <i class="fas fa-calendar-plus me-1"></i> Book Now
                                            </a>
                                        </div>
                                        <div class="col-6">
                                            <a href="/Specialty/ShowAllDoctorsInSpecialty/@doctor.SpecialtyId" class="btn btn-outline-primary btn-sm w-100 bigger2" style="border-radius: 6px; font-weight: 500; height:40px; line-height: 26px;">
                                                <i class="fas fa-users me-1"></i> View Specialty
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Statistics Section -->
            <div class="mt-4 p-3 bg-white rounded shadow-sm">
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="stat-item">
                            <h4 class="text-success font-weight-bold mb-0">@Model.Count()</h4>
                            <small class="text-muted">Total Doctors</small>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-item">
                            <h4 class="text-info font-weight-bold mb-0">@Model.Average(d => d.ExperienceYears).ToString("F1")</h4>
                            <small class="text-muted">Avg. Experience (Years)</small>
                        </div>
                    </div>
@*                     <div class="col-md-3">
                        <div class="stat-item">
                            <h4 class="text-warning font-weight-bold mb-0">@Model.Count(d => d.IsVerified)</h4>
                            <small class="text-muted">Verified Doctors</small>
                        </div>
                    </div> *@
                    <div class="col-md-4">
                        <div class="stat-item">
                            <h4 class=" font-weight-bold mb-0">@Model.GroupBy(d => d.Specialty.Name).Count()</h4>
                            <small class="text-muted">Specialties</small>
                        </div>
                    </div>
                </div>
            </div>

            @* <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            @if (ViewBag.Page > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("AllDoctors", new { search = ViewBag.Search, page = ViewBag.Page - 1, pageSize = ViewBag.PageSize })">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, ViewBag.Page - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.Page + 2); i++)
                            {
                                <li class="page-item @(i == ViewBag.Page ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("AllDoctors", new { search = ViewBag.Search, page = i, pageSize = ViewBag.PageSize })">@i</a>
                                </li>
                            }

                            @if (ViewBag.Page < ViewBag.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("AllDoctors", new { search = ViewBag.Search, page = ViewBag.Page + 1, pageSize = ViewBag.PageSize })">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>

                <!-- Pagination Info -->
                <div class="text-center mt-3">
                    <small class="text-muted">
                        Showing @((ViewBag.Page - 1) * ViewBag.PageSize + 1) to @(Math.Min(ViewBag.Page * ViewBag.PageSize, ViewBag.TotalCount)) of @ViewBag.TotalCount doctors
                    </small>
                </div>
            }
        *@

        <style>
                .page-link{
					border-radius: 50px !important;
                }
                
        </style>
        
            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <div class="d-flex justify-content-center mt-4">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-lg">

                            @if (ViewBag.Page > 1)
                            {
                                <li class="page-item">
