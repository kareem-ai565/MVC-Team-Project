@model ApplicationUser
@{
    ViewData["Title"] = "My Profile";
    Layout = "_DashbordLayout";
}

<div class="container mt-4">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-user-shield me-2"></i> Admin Profile</h5>
        </div>

        <div class="card-body">
            <div class="text-center mb-4">
                <img src="@(Model.ProfilePicture ?? "/images/admin.jpeg")"
                     alt="Admin Profile"
                     class="rounded-circle shadow"
                     style="width:120px; height:120px; object-fit:cover;" />

                <h4 class="mt-3">@Model.FullName</h4>
                <span class="text-muted">Role: Admin</span>
            </div>

            <div class="row mt-4">
                <div class="col-md-6 mb-3">
                    <label class="form-label">Email</label>
                    <input value="@Model.Email" class="form-control" readonly />
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label">Phone</label>
                    <input value="@Model.PhoneNumber" class="form-control" readonly />
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Username</label>
                <input value="@Model.UserName" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Created At</label>
                <input value="@Model.CreatedAt.ToString("MMMM dd, yyyy")" class="form-control" readonly />
            </div>
        </div>
    </div>
</div>
