@model MVC_Team_Project.View_Models.AvailabilityViewModel

@{
    ViewData["Title"] = "Edit Availability";
    Layout = "_DoctorDashbordLayout";

}

<h2>Edit Availability</h2>
<form asp-action="Edit" asp-controller="Availability" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label class="form-label">Date</label>
        <input type="date" class="form-control" asp-for="AvailableDate" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Start Time</label>
        <input type="time" class="form-control" asp-for="StartTime" required>
    </div>
    <div class="mb-3">
        <label class="form-label">End Time</label>
        <input type="time" class="form-control" asp-for="EndTime" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Slot Duration (minutes)</label>
        <input type="number" class="form-control" asp-for="SlotDuration" value="30" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Max Patients</label>
        <input type="number" class="form-control" asp-for="MaxPatients" value="1" required>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>