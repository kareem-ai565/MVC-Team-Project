@model MVC_Team_Project.Models.Availability
@{
    ViewData["Title"] = "Edit Availability";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Edit Availability</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 form-row">
                        <label asp-for="DoctorId" class="form-label">Doctor</label>
                        <input asp-for="DoctorId" class="form-control" />
                        <span asp-validation-for="DoctorId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-row">
                        <label asp-for="AvailableDate" class="form-label">Date</label>
                        <input asp-for="AvailableDate" type="date" class="form-control" />
                        <span asp-validation-for="AvailableDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-row">
                        <label asp-for="StartTime" class="form-label">Start Time</label>
                        <input asp-for="StartTime" type="time" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-row">
                        <label asp-for="EndTime" class="form-label">End Time</label>
                        <input asp-for="EndTime" type="time" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-row">
                        <label asp-for="SlotDuration" class="form-label">Slot Duration</label>
                        <input asp-for="SlotDuration" class="form-control" />
                        <span asp-validation-for="SlotDuration" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-row">
                        <label asp-for="MaxPatients" class="form-label">Max Patients</label>
                        <input asp-for="MaxPatients" class="form-control" />
                        <span asp-validation-for="MaxPatients" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 form-row">
                        <label asp-for="IsBooked" class="form-label">Booked</label>
                        <select asp-for="IsBooked" class="form-control">
                            <option value="false">No</option>
                            <option value="true">Yes</option>
                        </select>
                        <span asp-validation-for="IsBooked" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-success mt-4 fw-bold">Update Slot</button>
                <a asp-action="Index" class="btn btn-secondary fw-bold">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
